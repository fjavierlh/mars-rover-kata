{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir":"./lib/",
        "lib": ["es2015"]
    },
    "include": [
        "src/**/*",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}
